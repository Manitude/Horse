<!DOCTYPE html>
<html>
<head>
  <title>RentBazaar</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'bootstrap','tenant','facebox','bootstrap-table' %>
</head>
<body class="grey">
	<div class="navbar navbar-inverse navbar-static-top">
	  <div class="container">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="#">RentBazaar</a>
	    </div>
	    <div class="collapse navbar-collapse">
	      <ul class="nav navbar-nav navbar-right">
			<li><%= link_to "Sign Out", logout_path, {:class =>'active'}, :method => :delete %></li>
	      </ul>
	    </div><!--/.nav-collapse -->
	  </div>
	</div>
	<div class="container">
		<div class="wrapper">
			<div id="sidebar-wrapper" class="col-md-2">
		        <div id="sidebar">
		            <ul class="nav list-group">
		                <!-- <li><div class="thumbnail"><%= image_tag("mrBeans2.png", :class => "img-responsive") %></div></li>	-->
		                <li class="active"><%= link_to "Pay Now", tenant_pay_now_path, {:class=> "list-group-item list-group-item-info"}%></li>
		                <li><%= link_to "Roommate Info", tenant_roommate_path, {:class=> "list-group-item list-group-item-info"}, :data => { :toggle => 'collapse', :parent => '#sidebar' }%></li>
		                <!-- <li><%= link_to "Dashboard", tenant_dashboard_path, {:class=> "list-group-item list-group-item-info"}, :data => { :toggle => 'collapse', :parent => '#sidebar' }%></li>	-->
		                <li><%= link_to "Payment history", tenant_payment_history_path, {:class=> "list-group-item list-group-item-info"}%></li>
		                <!-- <li><%= link_to "Issue(s)", tenant_issue_path, {:class=> "list-group-item list-group-item-info"}%></li> -->
		                <a href="#profile_list" class="list-group-item list-group-item-info" data-toggle="collapse" data-parent="#sidebar">Profile</a>
					    <div id="profile_list">
					      <%= link_to "&nbsp;&nbsp;&nbsp;User Profile".html_safe, tenant_user_profile_path, {:class=> "list-group-item"}%>
					      <%= link_to "&nbsp;&nbsp;&nbsp;Flat Profile".html_safe, tenant_property_profile_path, {:class=> "list-group-item"}%>
					      <%= link_to "&nbsp;&nbsp;&nbsp;Payee Bank Detail".html_safe, tenant_bank_details_path, {:class=> "list-group-item"}%>
					    </div>
					    <li><%= link_to "HRA receipt", rent_receipt_path, {:class=> "list-group-item list-group-item-info"}%></li>
					    <li><%= link_to "Review", tenant_review_path, {:class=> "list-group-item list-group-item-info"}%></li>
		                <li><%= link_to "Setting", tenant_setting_path, {:class=> "list-group-item list-group-item-info"}%></li>
		            </ul>
		        </div>
		    </div>
      		<div class="col-md-9">
      			<%= yield %> 
      		</div>
		</div>
	</div>
	<!-- FOOTER: begin -->
  	<hr class="featurette-divider"></hr>
    <footer>
    	<p class="pull-right"><a href="#">Back to top&nbsp;&nbsp;</a></p>
    	<p class="text-muted credit">&nbsp;&nbsp;&nbsp;&nbsp;Product Copyright <a href="https://www.linkedin.com/profile/view?id=89879679&trk=nav_responsive_tab_profile_pic">Manish Tewary</a>.</p>
    </footer>
    <!-- FOOTER: end -->
  <!--	<script src="http://cdn.webrupee.com/js" type="text/javascript"></script> -->
  <%= javascript_include_tag 'jquery','bootstrap.min','tenant','facebox','bootstrap-table' %>
</body>
</html>