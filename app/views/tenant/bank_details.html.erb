<ol class="breadcrumb">
    <li><%= link_to "Home", tenant_path %></li>
        <li>Bank Detail</li>
        <li class="pull-right"><a onclick="hideBreadcrumb()">Hide me</a></li>
</ol>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      Landlord's Bank Details
    </h4>
  </div>
    <div class="panel-body">
      <%= form_for :property, :html => {:id => "property_form_id"}, :url => save_user_info_path(:format => :js) do |f| %>
        <div class="col-xs-12">
          <div class="col-md-12">
            <div class="form-group">
              <label class="col-lg-6 control-label">Landlord's Name:</label>
              <%= f.text_field :payee_name, :class => "col-lg-6", :placeholder => "Eg. Sunil Gavaskar"%>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Landlord's Account Number:</label>
              <%= f.text_field :payee_account_number, :class => "col-lg-6", :placeholder => "Eg. 1234123413241324"%>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Re-enter landlord's Account Number:</label>
              <%= f.text_field :payee_confirm_account_number, :class => "col-lg-6", :placeholder => "Eg. 1234123412341234"%>
            </div>
            <div class="form-group">
              <%= f.radio_button 'IFSC', false, :id => "IFSC"%> IFSC Code
              <%= f.radio_button 'Location', false, :id => "Location" %> Location
            </div>
            <div id="IFSC" style="display:none;">
              <%= f.text_field :IFSC, :class => "form-control", :placeholder => "Enter IFSC Code"%>
            </div>
            <div id="Location" style="display:none;">
              <div class="form-group">
                  <label class="col-lg-6 control-label">Bank:</label>
                  <%= f.text_field :payee_bank, :class => "col-lg-6", :placeholder => "Eg. UTI Bank"%>
              </div>
              <div class="form-group">
                <label class="col-lg-6 control-label">State:</label>
                <%= f.text_field :payee_state, :class => "col-lg-6", :placeholder => "Eg. Gujarat"%>
              </div>
              <div class="form-group">
                <label class="col-lg-6 control-label">Branch:</label>
                <%= f.text_field :payee_branch, :class => "col-lg-6", :placeholder => "Eg. ADI Block,VasantNagar"%>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label"></label>
          <div class="col-lg-7">
            <%= f.submit 'Save', :class => "btn btn-primary",:name => "save_payee_bank_details" %>
            <%= f.submit 'Save', :class => "btn btn-default",:name => "reset_payee_bank_details" %>
          </div>
        </div>
      <% end %>
    </div>
</div>