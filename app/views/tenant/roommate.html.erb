<ol class="breadcrumb">
    <li><%= link_to "Home", tenant_path %></li>
    <li>Roommate Info</li>
    <li class="pull-right"><a onclick="hideBreadcrumb()">Hide me</a></li>
</ol>
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
			Roommate Information 
		</h4>
    </div>
    <div class="panel-body">
		<div class="table-responsive">
        <table class="table table-condensed table-striped table-bordered table-hover no-margin">
            <thead>
              <tr>
                <th style="width:5%">No.</th>
                <th style="width:30%">Name</th>
                <th style="width:20%" class="hidden-phone">Contact</th>
                <th style="width:15%" class="hidden-phone">Bank Detail</th>
                <th style="width:10%" class="hidden-phone">email ID</th>
                <th style="width:10%" class="hidden-phone"><span data-toggle="tooltip" data-placement="top" title="Status of rent paid for the current month!">Rent Status</span></th>
                <th style="width:10%" class="hidden-phone" data-toggle="tooltip" data-placement="top" title="You may choose to edit/delete a roommate!">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @roommate_data.each do |data| %>
                    <tr>
                    <td style="text-align:center;">1</td>
                    <td><% data[:name] %></td>
                    <td style="text-align:center;"><% data[:contact_no] %></td>
                    <td style="text-align:center;"><% data[:bank_account_number] %></td>
                    <td style="text-align:center;"><% data[:email_id] %></td>
                    <td class="hidden-phone">
                      <span class="label label label-info">New</span>
                    </td>
                    <td class="hidden-phone">
                      <div class="btn-group">
                        <button data-toggle="dropdown" class="btn btn-xs dropdown-toggle" data-original-title="" title="">
                        Action 
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu pull-right">
                        <li>
                          <a href="#">Pay their rent</a>
                        </li>
                        <li>
                          <a href="#">Edit</a>
                        </li>
                        <li>
                          <a href="#">Delete</a>
                        </li>
                      </ul>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
          <div class="form-group">
            <!-- Button trigger modal -->
            <button class="btn btn-warning pull-right" data-toggle="tooltip" data-placement="bottom" title="Using this bla bla!">
              Pay for all
            </button>
            <button class="btn btn-warning pull-right" data-toggle="modal" data-target="#myModal">
              Add a roommate
            </button>
            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Add a roommate</h4>
                  </div>
                  <div class="modal-body">
                    <%= form_for :roommate_details, :html => {:id => "roommate_detail_id"}, :url => create_roommate_path(:format => :js) do |f| %>
                          <%= f.text_field :name, :autofocus => true,:placeholder => "Roommate's name", class: "form-control" %>
                          <%= f.text_field :email_id,:placeholder => "Roommate's email id", class: "form-control" %>
                  </div>
                  <hr>
                  <div class="modal-footer">
                    <%= f.submit "Save", :id => "save_roommate_details", class: "btn btn-primary btn-lg btn-block" %>
                    <br />
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>					
    </div>
</div>
