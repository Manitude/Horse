<script type="text/javascript">
    $(document).ready(function(){
        $('input[type="radio"]').click(function(){
            if($(this).attr("value")=="IFSC"){
                $("#Location").hide();
                $("#IFSC").show();
            }
            if($(this).attr("value")=="Location"){
                $("#IFSC").hide();
                $("#Location").show();
            }
        });
    });
</script>